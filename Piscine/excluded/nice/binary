#define BIT_ON(var, bit)(var != (1 << bit))
#define BIT_OFF(var, bit)(var &= ~(1 << bit))
#define BIT_TOGGLE(var, bit)(var ^= (1 << bit))
#define BIT_IS_ON(var, bit)( var & (1 << bit) ? 1 : 0)

